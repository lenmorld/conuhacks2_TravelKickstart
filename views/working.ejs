<!-- inline home template -->
<script type="text/ng-template" id="/travels.html">
    <h3>YaaS communication sample, GET all Products</h3>
    <div ng-repeat="product in products">
        {{product.name}} - {{product.description}}
    </div>

    <div class="container text-center">
        <h3>Travels</h3>
        <p>Travel now!</p>
    </div>

    <div class="row">
        <div class="col-sm-4" ng-repeat="travel in travels">
            <p><strong>{{travel.body}} - {{travel.person}}</strong></p><br/>
            <img ng-src="{{travel.image}}" class="travelpic" alt="" />
        </div>
    </div>

    <!-- insert travel -->
    <form class="addTravel" ng-submit="addTravel()">
        <h3>Add a new travel</h3>

        <div class="form-group">
            <input type="text" class="form-control" placeholder="Travel" ng-model="body"/>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Person" ng-model="person"/>
        </div>
        <button type="submit" class="btn btn-primary">ADD</button>
    </form>
</script>




</body>
